.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(rgba(12, 205, 137, 0.7)), to(rgba(0, 0, 0, 0)));
  height: 1150rpx;
  margin-bottom: 150rpx;
  width: 100%;
}

.container .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.container .userinfo-nickname {
  color: #E0FFFF;
  font-family: Arial, Helvetica, sans-serif;
  font-style: italic;
}

.container .row{
  padding: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center
} 

.container .edit{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 128rpx;
  opacity: 0.8;
}


.container .row .phoneNumber{
  flex: 5
}

.image_container{
  background-color: rgba(0, 0, 0, 0);
  background: initial;
}

.pageView{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 1800rpx;
}