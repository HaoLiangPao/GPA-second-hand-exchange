.rack .background {
    width: 100%;
    height: 100%;
}

.rack .txtTop {
    width: 250rpx;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center;
    color: #8B5A2B;
    position: absolute;
    top: 10%;
    left: 33%;
}

.rack .txtBottom {
    width: 250rpx;
    height: 20rpx;
    line-height: 20rpx;
    text-align: center;
    color: #8B5A2B;
    position: absolute;
    top: 82%;
    left: 33%;
}

.rack .refresh {
    width: 250rpx;
    height: 50rpx;
    line-height: 20rpx;
    text-align: center;
    color: #8B5A2B;
    position: absolute;
    top: 87%;
    left: 33%;
}

