page {
    height: 100%;
}

.rack {
    height: 100%;
    position: relative;
}

.mybook {
    width: 100%;
    height: 100px;
    padding:0px;
    margin:0px;
    position: fixed;
    top: 9%;
    left: 10%;
    display: flex;
    flex-direction: row;
}

.mybook2 {
    width: 100%;
    height: 100px;
    padding:0px;
    margin:0px;
    position: fixed;
    top: 42%;
    left: 10%;
    display: flex;
    flex-direction: row;
}

.item_size {
  position:relative;
  padding-right:3ch;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.deleteBox_hide{
  display:none;
  padding:0%;
}

.deleteBox{
  display:block;
  padding:0%;
}

.img {
    width: 96rpx;
    height: 96rpx;
    margin-top: 100rpx
}

.text {
    font-size: 16px;
    align-content: flex-end;
    margin-top: 15rpx;
    color: darkblue;
    padding-bottom: 0%;
}

.background {
    width: 100%;
    height: 100%;
}

.txt {
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    color: #fff;
    position: absolute;
    top: 40%;
    left: 50%;
}

.plus {
  width: 50px;
  height: 50px;
  position: absolute;
  top: 80%;
  left: 15%;
}

.minus {
  width: 50px;
  height: 50px;
  position: absolute;
  top: 80%;
  left: 75%;
}
