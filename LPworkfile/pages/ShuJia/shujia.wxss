.rack {
    height: 100%;
    position: relative;
}

.rack .mybook {
    width: 100%;
    height: 100px;
    padding:0px;
    margin:0px;
    position: fixed;
    top: 9%;
    left: 10%;
    display: flex;
    flex-direction: row;
}

.rack .mybook2 {
    width: 100%;
    height: 100px;
    padding:0px;
    margin:0px;
    position: fixed;
    top: 42%;
    left: 10%;
    display: flex;
    flex-direction: row;
}

.rack .mybook .item_size {
  position:relative;
  padding-right:2ch;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.rack .mybook .item_size .deleteBox_hide{
  display:none;
  padding:0%;
}

.rack .mybook .item_size .deleteBox{
  display: block;
  padding:0%;
}

.rack .mybook .item_size .img {
    width: 96rpx;
    height: 96rpx;
    margin-top: 100rpx
}

.rack .mybook .item_size .text {
    font-size: 16px;
    align-content: flex-end;
    margin-top: 15rpx;
    color: darkblue;
    padding-bottom: 0%;
}

