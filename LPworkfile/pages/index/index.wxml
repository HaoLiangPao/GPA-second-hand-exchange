<!--index.wxml-->
<view class="book-logo">
    <image class="book-logo" mode='aspectFill' src="/image/logo.png"></image>
</view>

<view class="search-wrapper">
    <view class="search-panel">
      <view class="search-section">
        <view class="search-button-wrapper">
        </view>
        <view class="search-input-wrapper ">
          <input bindinput="bindBarcodeInput" bindconfirm="query" bindfocus="bindFocus" bindblur="bindBlur" class="search-input" placeholder="Course Code for text book" value="{{coursecode}}" confirm-type="search" auto-focus='true'auto-height='true' />
        </view>
        <view class="search-button-wrapper">
          <image class="search-button" src="/image/search.png" bindtap="query"></image>
        </view>
      </view>
    </view>
    <view class="search-demo" hidden="{{hiddenDropdown}}">
      <button size="mini" bindtap="CourseType">课程分类</button>
      <button size="mini" bindtap='BookList' style="margin-left:10px;">最新上架</button>
      <button size="mini" bindtap='scan' style="margin-left:10px;">照片查书</button>
    </view>
  </view>