/* pages/wantsell/wantsell.wxss */
.wholePage{
  height: 1800rpx;
  background:-webkit-gradient(linear, 0% 0%, 0% 100%,from(rgba(231,245,121, 0.7)), to(rgba(63,189,14, 0.7)));
}

/*
  置顶 Welcome 字样
  title logo
*/
.title{
  align-items: center;
  height: 275rpx;
  width: 100%;
  font-size: 35rpx;
  font-weight: 900;
  background: inherit;
  flex-direction: row;
  justify-content: center;
  padding-top: 5rpx;
  padding-left: 250rpx;
  background: -webkit-gradient(linear, 0% 0%, 0% 100%,from(rgba(63,189,14, 0.7)), to(rgba(231,245,121, 0.7)));
}

.title .image{
  width: 250rpx;
  height: 200rpx;
  display: flex;
}

.title .text{
  padding-left: 60rpx;
}



.image_container{
  padding: 5%;
  width:100%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
  display: flex;
  padding-left: 75rpx;
}


.image_container .single_image{
  width: 150rpx;
  height: 150rpx;
  padding: 20rpx;
  display: flex;
}


.wholePage .BigForm{
  align-self: center;
