*/
  padding: 2.5%;
  height: 1600rpx;
}

.wholePage .BigForm .book_info .sdinput{
  border: gainsboro;
  border-style: solid;
  font-size: 28rpx;
  border-radius: 5%;
  height: 28rpx;
  background: gainsboro;
  margin-bottom: 1%;
  margin-right: 10rpx;
}

.wholePage .BigForm .book_info .description{
  width:99%;
  border: gainsboro;
  border-style: solid;
  border-width: 1rpx;
  font-size: 28rpx;
  border-radius: 5%;
  height: 200rpx;
  background: gainsboro;
  margin-right: 10rpx;
}

.wholePage .BigForm .book_info .weui-input{
  background: gainsboro;
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 5%;
  margin-right: 10rpx;
